{
    "compilerOptions": {
      "target": "esnext",
      "moduleResolution": "nodenext",            
      "module": "esnext",                  
      "strict": true,                        
      "esModuleInterop": true,               
      "forceConsistentCasingInFileNames": true,
      "experimentalDecorators": true
    },
    "include": [
      "src/**/*.ts"                         
    ],
    "exclude": [
